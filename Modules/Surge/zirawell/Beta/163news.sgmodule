[Map Local]
^https?:\/\/c\.m\.163\.com\/nc\/gl\/ data-type=text data="" status-code=200

[Script]
163news = type=http-response, pattern=^https?:\/\/gw\.m\.163\.com\/nc\/api\/v\d\/feed\/dynamic\/headline-list\?, script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/163news/163news.js, requires-body=true, max-size=0

163news = type=http-response, pattern=^https?:\/\/gw\.m\.163\.com\/nc\/api\/v\d\/search\/hot-word, script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/163news/163news.js, requires-body=true, max-size=0

163news = type=http-response, pattern=^https?:\/\/nex\.163\.com\/q, script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/163news/163news.js, requires-body=true, max-size=0

[MITM]
hostname = %APPEND% c.m.163.com, gw.m.163.com, nex.163.com

