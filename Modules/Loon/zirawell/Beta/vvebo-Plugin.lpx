[Script]
# 修复时间线
http-request ^https?:\/\/api\.weibo\.cn\/2\/remind\/unread_count\? script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/vvebo-Plugin/VVebo_Repair.js, tag=vvebo

http-request ^https?:\/\/api\.weibo\.cn\/2\/statuses\/user_timeline\? script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/vvebo-Plugin/VVebo_Repair.js, tag=vvebo

http-response ^https?:\/\/api\.weibo\.cn\/2\/profile\/statuses\/tab\? script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/vvebo-Plugin/VVebo_Repair.js, requires-body=true, tag=vvebo

# 修复我的页面
http-response ^https?:\/\/api\.weibo\.cn\/2\/cardlist\? script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/vvebo-Plugin/VVebo_Repair.js, requires-body=true, tag=vvebo

