[Rewrite]
# 先问是不是再问为什么
^https?:\/\/118\.89\.204\.198 - reject-dict
^https?:\/\/103\.41\.167\.237 - reject-dict
^https?:\/\/2402:4e00:1200:ed00:0:9089:6dac:96b6 - reject-200
# 拦截开屏广告
^https?:\/\/api\.zhihu\.com\/commercial_api - reject-dict
# 拦截回答下方的广告
^https?:\/\/api\.zhihu\.com\/commercial_api\/answer/\d+/bottom-v2 - reject-dict
# 拦截不影响使用的请求
^https?:\/\/api\.zhihu\.com\/message-push\/event - reject-dict
# 屏蔽 - 付费回答用户营销引导
^https?:\/\/api\.zhihu\.com\/guide_center\/strategy - reject-dict
# 屏蔽 - 会员页浮动广告
^https?:\/\/api\.zhihu\.com\/bazaar\/float_window - reject-dict
# 屏蔽 - 数据上报
^https?:\/\/api\.zhihu\.com\/metrics\/report - reject-dict
# 屏蔽 - 疑似通知
^https?:\/\/api\.zhihu\.com\/settings\/new\/notification - reject-dict
# 屏蔽 - 会员相关广告
^https?:\/\/api\.zhihu\.com\/bazaar\/vip_tab\/header - reject-dict
# 去除消息通知角标
^https?:\/\/api\.zhihu\.com\/(notifications\/v\d\/count) - reject-dict
# 去除推荐页顶部广告
^https?:\/\/api\.zhihu\.com\/root\/window - reject-dict
# 拦截应用内弹窗
^https?:\/\/api\.zhihu\.com\/me\/guides - reject-dict
# 去除关注页最常访问
^https?:\/\/api\.zhihu\.com\/moments\/recent - reject-dict
# 拦截推荐页顶部广告
^https?:\/\/api\.zhihu\.com\/api\/v4\/ecom_data\/config - reject-dict
# 疑似推荐页内容更新红点
^https?:\/\/api\.zhihu\.com\/feed\/render\/revisit\/tag_config - reject-dict
# 部分推荐页Tab的Banner
^https?:\/\/api\.zhihu\.com\/content-distribution-core\/sections\/ - reject-dict

[Script]
# 获取用户信息 - 隔离用户数据，开启本地会员等
http-response ^https?:\/\/api\.zhihu\.com\/people\/ script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 关键词屏蔽 - 解锁本地的关键词屏蔽功能，需要开启本地VIP
http-request ^https?:\/\/api\.zhihu\.com\/feed-root\/block script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 优化软件配置 - 优化下发的配置文件来实现某些效果
http-response ^https?:\/\/api\.zhihu\.com\/root\/tab\/v2 script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 推荐页 - 移除黑名单用户发布的文章、去除广告，及自定义一些屏蔽项目
http-response ^https:\/\/(api|web-render)\.zhihu\.com\/topstory\/recommend script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 回答列表 - 移除黑名单用户的回答、去除广告
http-response ^https:\/\/api\.zhihu\.com\/questions\/\d+\/feeds? script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 回答信息流 - 移除黑名单用户的回答、去除广告
http-response ^https?:\/\/api\.zhihu\.com\/next-render script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 消息页 - 折叠官方消息、屏蔽营销消息
http-response ^https?:\/\/api\.zhihu\.com\/notifications\/v3\/(message|timeline\/entry\/system_message) script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 评论页 - 去除黑名单用户发表的评论
http-response ^https?:\/\/api\.zhihu\.com\/(comment_v5\/)?(answers|comments?|articles|pins)\/\d+\/(root_|child_)?comments? script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 回答页 - 移除相关问题推荐
http-response ^https:\/\/(page-info|api)\.zhihu\.com\/answers\/v2\/\d+ script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 文章页 - 移除相关问题推��
http-response ^https:\/\/api\.zhihu\.com\/articles\/v\d\/\d+ script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 关注页 - 屏蔽黑名单用户
http-response ^https?:\/\/api\.zhihu\.com\/moments_v3\? script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 热榜页 - 去除广告
http-response ^https?:\/\/api\.zhihu\.com\/topstory\/hot-lists(\?|\/) script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 搜索页 - 去除预置广告
http-response ^https?:\/\/api\.zhihu\.com\/search\/preset_words\? script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 搜索页 - 猜你想搜去广告
http-response ^https?:\/\/api\.zhihu\.com\/search\/recommend_query script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 黑名单页 - 同步黑名单数据
http-response ^https:\/\/api\.zhihu\.com\/settings\/blocked_users script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

# 回答页底部评论摘要 - 移除黑名单用户发表的评论
http-response ^https?:\/\/www\.zhihu\.com\/api\/v4\/comment_v5\/answers\/\d+\/abstract_comment\? script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/ddgksf2013/zheye/zheye.min.js, requires-body=true, timeout=60, tag=zheye.min

