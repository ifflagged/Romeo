soul = type=http-response, pattern=^https?:\/\/api-a\.soulapp\.cn\/official\/scene\/module, script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/soul/soul.js, requires-body=true, max-size=0

soul = type=http-response, pattern=^https?:\/\/api-chat\.soulapp\.cn\/chat\/limitInfo, script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/soul/soul.js, requires-body=true, max-size=0

soul = type=http-response, pattern=^https?:\/\/api-user\.soulapp\.cn\/furion\/position\/content, script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/soul/soul.js, requires-body=true, max-size=0

soul = type=http-response, pattern=^https?:\/\/api-pay\.soulapp\.cn\/vip\/meet\/userInfo, script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/soul/soul.js, requires-body=true, max-size=0

