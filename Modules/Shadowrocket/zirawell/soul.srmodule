[URL Rewrite]
# 国际版
^https?:\/\/api-global\.soulapp\.me\/app\/open\/get - reject

[Map Local]
^https?:\/\/ssp\.soulapp\.cn\/api\/q data-type=text data="{}"

^https?:\/\/api-account\.soulapp\.cn\/teenager\/config data-type=text data="{}"

^https?:\/\/api-chat\.soulapp\.cn\/chat\/entrance\/first data-type=text data="{}"

[Script]
