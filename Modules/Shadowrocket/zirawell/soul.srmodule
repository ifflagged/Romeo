soul = type=http-response, pattern=^https?:\/\/gateway-mobile-gray\.soulapp\.cn\/mobile\/app\/version\/queryIos, script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/soul/soul.js, requires-body=true, max-size=0

[MITM]
hostname = %APPEND% ssp.soulapp.cn, api-account.soulapp.cn, api-a.soulapp.cn, api-chat.soulapp.cn, api-user.soulapp.cn, api-pay.soulapp.cn, post.soulapp.cn, gateway-mobile-gray.soulapp.cn, api-global.soulapp.me

