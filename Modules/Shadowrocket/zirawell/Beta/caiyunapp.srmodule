[Rule]
DOMAIN,ad.cyapi.cn,REJECT,extended-matching

[Map Local]
^https?:\/\/biz\.cyapi\.cn\/v\d\/product data-type=text data="{}"

^https?:\/\/biz\.cyapi\.cn\/p\/v\d\/(entries|trial_card\/info) data-type=text data="{}"

^https?:\/\/starplucker\.cyapi\.cn\/v\d\/(config\/cypage\/\w+\/conditions|notification\/message_center|operation\/homefeatures) data-type=text data="{}"

[Script]
caiyunapp = type=http-response, pattern=^https?:\/\/(wrapper\.cyapi\.cn|api\.caiyunapp\.com)\/v\d\/activity\?, script-path=https://github.com/ifflagged/Romeo/raw/main/Modules/JS/zirawell/caiyunapp/caiyun.js, requires-body=true, max-size=0

[MITM]
hostname = %APPEND% biz.cyapi.cn, starplucker.cyapi.cn, wrapper.cyapi.cn, api.caiyunapp.com

